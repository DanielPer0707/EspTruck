#include <WiFi.h>
#include <ESPAsyncWebServer.h>

#include <DHT11.h>

// Definir as credenciais do access point network
const char* ssid = "ssid";
const char* password = "password";
WiFiClient client;

// Criar o AsyncWebServer object on port 80
AsyncWebServer server(80);

// Por default liga-se ao Pino 2 - GPIO 2 mas aqui conectamos ao 13
// por comodidade de ligação cabo RJ11 
DHT11 dht11(13);

// Criar a string de temperatura e humidade com os valores retirados do sensor
String readTemp() {
  return String(dht11.readTemperature());
}

String readHumi() {
  return String(dht11.readHumidity());
}

void setup(){
  
  Serial.begin(9600);
  Serial.println();
  
      // Definir o ESP como um access point
  Serial.print("Setting AP (Access Point)…");
      // Aceder com password ao ESP
  WiFi.softAP(ssid, password);

  IPAddress IP = WiFi.softAPIP();
  Serial.print("AP IP address: ");
  Serial.println(IP); // mostrar endereço IP

// Comunicar a temperatura e Humidade do ESP servidor
  server.on("/temperature", HTTP_GET, [](AsyncWebServerRequest *request){
    request->send_P(200, "text/plain", readTemp().c_str());
  });
  server.on("/humidity", HTTP_GET, [](AsyncWebServerRequest *request){
    request->send_P(200, "text/plain", readHumi().c_str());
  }); 

  // Iniciar Servidor
  server.begin();
  Serial.println("Servidor TCPIP ativo");
// IP address
Serial.println(WiFi.localIP());
}
 
void loop(){

  Serial.println(readTemp());
  Serial.println(readHumi());
}
