#include <DHT11.h>

 // Por default liga-se ao Pino 2 - GPIO 2 mas aqui conectamos ao 13
 // por comodidade de ligação cabo RJ11 
DHT11 dht11(13);

// Criar a string de temperatura e humidade com os valores retirados do sensor
String readTemp() {
  return String(dht11.readTemperature());
}

String readHumi() {
  return String(dht11.readHumidity());
}

void setup() {
   
    Serial.begin(115200);
    
    dht11.setDelay(1000); 
       
}
// Dentro do loop imprimimos os resultados de temperatura e 
 //humidade que é possível visualizar no Serial Monitor do Arduino IDE
void loop() {
    
        Serial.print("Temperatura: ");
        Serial.print(readTemp().c_str());
        Serial.print(" °C\tHumidade: ");
        Serial.print(readHumi().c_str());
        Serial.println(" %");

}

